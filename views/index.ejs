<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">Music Blog Site</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>" >
                    </div>
                    <div class="content">
                        <h2><%=blog.artist %></h2>
                        <h3><%=blog.release %></h3>
                        <div class="description">
                            <% if (typeof blog.body == 'undefined' ) { %>
                                <p>no content</p>  
                            <% } else { %>
                                <p> <%- blog.body.substring(0, 100) %>...</p>
                            <% } %>
                        </div>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">Read More</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<% include ./partials/footer %>